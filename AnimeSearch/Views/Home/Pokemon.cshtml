@{
    ViewData["Title"] = "Pokemon Go - Dialga";
}

<link rel="stylesheet" href="~/css/Pokemon.css">

<!-- partial:index.partial.html -->
<section id="wrapper" class="w-100 h-100">
    <div id="title">
        <h1>Attrapez Dialga !</h1>
    </div>
    <div id="info-button" onclick="toggleInfoScreen()">?</div>
    <div id="info-screen" class="hidden">
        <div id="info-shade"></div>
        <div id="info-text">
            <h3>Attrape Dialga:</h3>
            <ul>
                <li>Faites glisser le pokeball vers le haut, avec juste assez de vitesse </li>
                <li>Plus le cercle vert est petit, plus vous avez de chances d'attraper Dialga!</li>
            </ul>
        </div>

    </div>
    <div id="touch-layer"></div>
    <div id="particles"></div>
    <div id="ring-screen">
        <div id="ring">
            <div id="ring-active">
                <div id="ring-fill"></div>
            </div>
        </div>
    </div>
    <div id="screen" class="gradient-background">
        <div id="target-container">
            <div id="target"></div>
        </div>
        <div id="ball"></div>
        <div id="output"></div>
    </div>


    <div id="capture-screen" class="gradient-background hidden">
        <div id="capture-status" class="hidden">
            Vous avez attrapé Dialga !
        </div>
        <div id="poof-container" class="hidden">
            <div id="poof"></div>
        </div>
        <div id="capture-confetti"></div>
        <div id="capture-ball"></div>
        <div id="capture-ball-button-container" class="hidden">
            <div id="capture-ball-button"></div>
        </div>
    </div>


</section>
<!-- partial -->
<script src='~/js/Pokemon/animation.min.js'></script>
<script src='~/js/Pokemon/zingtouch.min.js'></script>
<script src="~/js/Pokemon/script.min.js"></script>
