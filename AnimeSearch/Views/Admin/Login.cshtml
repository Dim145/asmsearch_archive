@{
    ViewData["Title"] = "Admin login";
}

<link rel="stylesheet" href="~/css/Admin/Login.min.css" />

<div id="login-card" class="card text-white border border-white">
    <div class="card-body">
        <h2 class="text-center">Connexion</h2>
        @if (ViewBag.error != null)
        {
            <p class="text-danger">@ViewBag.error</p>
        }
        else
        {
            <br>
        }
        <form method="post" asp-controller="admin" asp-action="login">
            <div class="form-group">
                <input @(ViewData["username"] is null ? "autofocus" : "")  type="text" class="form-control input-dark" placeholder="Pseudo" name="username" value="@ViewData["username"]" required >
            </div>
            <div class="form-group">
                <input @(ViewData["username"] is not null ? "autofocus" : "") type="password" class="form-control input-dark" placeholder="Mot de passe" name="password" required >
            </div>
            <button type="submit" id="button" class="btn btn-primary deep-purple btn-block ">Valider</button>
            <br>
        </form>
    </div>
</div>