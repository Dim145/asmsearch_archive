@using AnimeSearch.Database;

@{
    Users selected_user = ViewData["selected user"] is not null and Users u ? u : null;

    ViewData["Title"] = "Recherches pour " + (selected_user != null ? selected_user.Name : "????");
}

<style>
    td, th {
        vertical-align: middle!important;
    }
</style>

<h2 class="h2 w-100 text-center align-self-center text-white">@ViewData["title"]</h2>

<div class="border rounded" style="max-height: 70vh; overflow: auto;">
    @if (ViewData["recherches"] is not null and string[][] recherches)
    {
        @Utilities.ReactComponent(Html, "~/js/react/Table.jsx", new { rows = recherches, cols = Tab( "Nom", "Nombre de recherches", "Dernière recherche" ) });
    }
</div>