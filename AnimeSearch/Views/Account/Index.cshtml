@using AnimeSearch.Database
@using AnimeSearch.Views.Account
@using Microsoft.AspNetCore.Identity

@model AnimeSearch.Controllers.AccountController.ChangeProfilInput
@inject UserManager<Users> _userManager

@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    
    var user = ViewData["currentUser"] is Users u ? u : null;

    ViewData["user"] = user;

    IList<string> roles = user != null ? await _userManager.GetRolesAsync(user) : new List<string>();
    ViewData["roles"] = roles;
}

@if(Model != null && roles.Count > 0)
{
    <div class="position-absolute" style="top: 0; right: 0;">
        Roles: @string.Join(", ", roles)
    </div>
}

<h4>@ViewData["Title"]</h4>
@if (ViewData["StatusMessage"] is not null)
{
    <partial name="_StatusMessage" model='ViewData["StatusMessage"]' />
}
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" id="cun" disabled />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" id="cupn" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

<conf id="liveConf" style="right: 0; width: 200px; height: 200px;">
    <script src="~/lib/live/autoload.min.js"></script>
</conf>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}