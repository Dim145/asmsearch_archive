@using Microsoft.AspNetCore.Mvc.Localization
@model AnimeSearch.Site.Controllers.IdentityController.InputLoginModel

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["title"];
}

<link rel="stylesheet" href="~/css/Admin/Login.min.css" />

<div id="login-card" class="card text-white border border-white">
    <div class="card-body">
        <h2 class="text-center">@Localizer["Connexion"]</h2>
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" autofocus />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col text-left">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary">@Localizer["title"]</button>
                    </div>
                </div>
            </div>
            @*<div class="form-group">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
            </div>*@
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}